@model IEnumerable<ooad_grupa3_tim11.Models.Room>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Admin</h1>
 
</div>

<div>
    <h2>Rooms</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.AccommodationType)</th>
                <th>@Html.DisplayNameFor(model => model.Hotel.Name)</th>
                <th>@Html.DisplayNameFor(model => model.BestOffer)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Picture)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AccommodationType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hotel.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.BestOffer)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <img src="@item.Picture" alt="Room Picture" style="max-width: 200px; height: auto;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-secondary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
