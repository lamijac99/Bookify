@model ooad_grupa3_tim11.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="card mb-4">
    <div class="card-header">
        <h2>Room Details</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.Picture" alt="Room Picture" class="img-fluid rounded mb-3" />
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AccommodationType)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AccommodationType)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Hotel)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Hotel.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BestOffer)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.BestOffer)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-8">@Model.Price $</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer text-right">
        <a asp-action="Edit" asp-route-id="@Model?.RoomId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
